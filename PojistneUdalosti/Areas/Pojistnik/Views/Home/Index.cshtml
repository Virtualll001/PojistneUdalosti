@model IEnumerable<PojistneUdalosti.Models.Pojisteni>
@{
    ViewData["Title"] = "Pojištění";
}

<div class="text-center">
    <h1 class="display-5">Pojistné události</h1>
    <h3 class="text-primary">Typy pojištění</h3>
</div>

<div class="row pb-3"> 
    @foreach (var pojisteni in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12  p-1" style="border:1px solid #008cba; border-radius: 5px">
                    <div class="card p-3" style="border:0px;">
                        <img src="@pojisteni.ImageUrl" class="card-img-top rounded pb-4" />
                        <div>
                            <p class="card-title h5 text-primary"><strong>@pojisteni.TypPojisteni.ToUpper()</strong></p>
                            <p class="card-title text-white">@pojisteni.Podminky</p>
                        </div>
                        <div>
                            <p>Měsíční zálohová platba: <b class="text-primary">@pojisteni.Zaloha.ToString(),-</b> Kč</p>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@pojisteni.PojisteniId">Zobrazit</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>