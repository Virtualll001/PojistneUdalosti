<!--ne "Pojistník, ale ViewModel!"-->
@model PojistneUdalosti.Models.Pojistnik
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Nový pojistník";   
}

<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.PojistnikId != 0)
        {
            //EDIT
            title = "Úprava záznamu";
            <input type="hidden" asp-for="PojistnikId" />
        }
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-11 pt-4">
            <div class="form-group row mb-2">
                <div class="col-3">
                    <label asp-for="Jmeno"></label>
                </div>
                <div class="col-9">
                    <input asp-for="Jmeno" class="form-control" />
                    <span asp-validation-for="Jmeno" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-2">
                <div class="col-3">
                    <label asp-for="Prijmeni"></label>
                </div>
                <div class="col-9">
                    <input asp-for="Prijmeni" class="form-control" />
                    <span asp-validation-for="Prijmeni" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-2">
                <div class="col-3">
                    <label asp-for="Adresa"></label>
                </div>
                <div class="col-9">
                    <input asp-for="Adresa" class="form-control" />
                    <span asp-validation-for="Adresa" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-2">
                <div class="col-3">
                    <label asp-for="TelefonCislo"></label>
                </div>
                <div class="col-9">
                    <input asp-for="TelefonCislo" class="form-control" />
                    <span asp-validation-for="TelefonCislo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-2">
                <div class="col-3">
                    ID Pojištění
                </div>
                <div class="col-9">
                    <input asp-for="PojisteniId" class="form-control" />
                    <span asp-validation-for="PojisteniId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-2">
                <div class="col-9 offset-3">
                    @if (Model.PojistnikId != 0)
                    {
                        <partial name="_EditAndBackToListButton" model="Model.PojistnikId" /> //EDIT potřebuje ID
                    }
                    else
                    {
                        <partial name="_CreateAndBackToListButton" />
                    }
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}


