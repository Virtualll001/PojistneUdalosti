@{
    ViewData["Title"] = "Pojistník";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Seznam pojistníků</h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-primary" asp-action="Upsert"><i class="fas fa-plus"></i>&nbsp; Nový pojistník</a>
    </div>
</div>

<br />
<div class="p-4 border rounded">
    <table id="tblData" class="mojeTab" style="width:100%">
        <thead>
            <tr>
                <th>Jméno</th>
                <th>Příjmení</th>
                <th>Adresa</th>
                <th>Telefonní číslo</th>
                <th>Pojištění</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/pojistnik.js"></script>
}
